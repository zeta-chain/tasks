{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "./packages/tasks/src",
      "./packages/client/src",
      "./packages/test/src"
    ]
  },
  "files": ["./hardhat.config.ts"],
  "include": ["packages/client", "packages/tasks", "packages/test"],
  "exclude": ["./typechain-types"]
}
