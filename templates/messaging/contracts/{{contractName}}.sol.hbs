         */
        if (messageType != {{contractNameUnderscore}}_MESSAGE_TYPE)
            revert InvalidMessageType();

        emit {{contractName}}Event({{#each arguments.pairs}}{{#if @index}}, {{/if}}{{this.[0]}}{{/each}});
    }

